<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tableau de bord - Port de plaisance de Russell</title>
    <meta name="robots" content="noindex">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>

    <header>
        <h1 class="text-center">Tableau de bord - Port de plaisance de Russell</h1>
        <nav class="navbar navbar-expand-lg bg-body-tertiary border mb-4 mt-4">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link bg-primary-subtle active m-2 border" aria-current="page"  href="/users">Gestion des utilisateurs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link bg-primary-subtle active m-2 border" aria-current="page"  href="/catways">Gestion des catways</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link bg-primary-subtle active m-2 border" aria-current="page"  href="/reservations">Gestion des réservations</a>
                        </li>
                        <li class="nav-item">
                            <a class="bg-primary-subtle nav-link active m-2 border" aria-current="page"  href="http://localhost:8080/api-docs/">Documentation de l'API</a>
                        </li>
                    </ul>
                    <span class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <a class="nav-link bg-dark-subtle active m-2 text-dark-emphasis" aria-current="page"  href="/auth/logout">Déconnexion</a>
                    </span>
                </div>
            </div>
        </nav>
    </header>

    <main>

        <section class="text-center">

            <h2>Utilisateur connecté :</h2>

            <p><%= user.username %></p>
            <p><%= user.email %></p>

        </section>

        <section>
            <!--TODO : date du jour-->
        </section>

        <table class="table m-4 table-bordered">
            
            <caption>Liste des réservations en cours</caption>

            <thead>
                <tr>
                    <th scope="col">Numéro de catway</th>
                    <th scope="col">Nom du client</th>
                    <th scope="col">Nom du bateau</th>
                    <th scope="col">Date de début</th>
                    <th scope="col">Date de fin</th>
                </tr>
            </thead>

            <tbody>
                <% reservations.forEach(function(reservation) { %>
                    <tr>
                        <td class="align-middle"><%= reservation.catwayNumber %></td>
                        <td class="align-middle"><%= reservation.clientName %></td>
                        <td class="align-middle"><%= reservation.boatName %></td>
                        <td class="align-middle"><time datetime="<%= reservation.startDate %>"><%= new Date(reservation.startDate).toLocaleDateString('fr-FR') %></time></td>
                        <td class="align-middle"><time datetime="<%= reservation.endDate %>"><%= new Date(reservation.endDate).toLocaleDateString('fr-FR') %></time></td> 
                    </tr>
                <% }); %>
            </tbody>
        </table>

    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>

</html>